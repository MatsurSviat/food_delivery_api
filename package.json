{
  "name": "food-delivery",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "-------------------prestart command----------------": "",
    "database:init": "ts-node -r tsconfig-paths/register src/db/scripts/init-database.ts",
    "---------------------main command------------------": "",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "---------------------code verifiers----------------": "",
    "prettier": "prettier \"src/**/*.ts\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:fix": "npm run prettier -- --write",
    "lint": "eslint \"src/**/*.ts\" --color --quiet",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "----------------------database---------------------": "",
    "fixtures:load": "ts-node -r tsconfig-paths/register src/db/fixtures/fixture-loader.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "typeorm:create-migration": "npm run typeorm migration:create src/db/migrations/$npm_config_name",
    "typeorm:generate-migration": "npm run typeorm -- -d src/db/data-source.ts migration:generate src/db/migrations/$npm_config_name",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d src/db/data-source.ts",
    "typeorm:revert-migation": "npm run typeorm migration:revert -- -d src/db/data-source.ts",
    "drop-db": "npm run typeorm schema:drop -- -d src/db/data-source.ts",
    "full-reload": "npm run drop-db && npm run typeorm:run-migrations && npm run fixtures:load"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schedule": "^2.2.0",
    "@nestjs/serve-static": "^3.0.1",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "@types/bcrypt": "^5.0.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "mysql2": "^3.2.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.10.0",
    "postgres": "^3.3.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.12",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@types/compression": "^1.7.2",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/pg": "^8.6.6",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-class-members": "^1.16.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --check",
      "eslint --color --quiet"
    ]
  }
}
